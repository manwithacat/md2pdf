# md2pdf dependencies
# Install all: brew bundle
# Install without Cask: brew bundle --no-upgrade

# Required
brew "pandoc"  # Markdown to HTML/LaTeX converter

# Chrome backend (default) - usually already installed
# If not: download from https://google.com/chrome or:
# cask "google-chrome"  # Uncomment if needed
# cask "chromium"       # Alternative to Chrome

# Optional: Typst backend (modern typesetting)
# brew "typst"

# Optional: LaTeX backend (academic/math documents)
# cask "basictex"  # Minimal TeX distribution (~1GB)
